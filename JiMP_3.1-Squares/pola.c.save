#include <stdio.h>
#include <math.h>
#ifndef M_PI
    #define M_PI 3.14159265358979323846
#endif

double a,b,c,r;
double pole, obwod;

void wyborFigury(void);
void kolo(void);
void prostokat(void);
void trojkat(void);

int main(){

wyborFigury();

return 0;
}

void wyborFigury(){
    int n = 0;
	printf("Wybierz figure (1-prostokat, 2 - trojkat, 3 - kolo): ");
	scanf("%d", &n);

	switch (n)
	{
    case 1:
		prostokat();
		break;
	case 2:
		trojkat();
		break;
	case 3:
		kolo();
		break;
    default:
        printf("Bledna wartosc!\n");
		wyborFigury();
		break;
	}
}

void prostokat(){
	printf("Podaj boki prostokata: ");
	scanf("%lf %lf", &a, &b);
	pole = a*b;
	obwod = 2*a+2*b;
	printf("Pole prostokata wynosi %.2f, a obwod %.2f \n", pole,obwod);
}

void trojkat(){
	printf("Podaj boki trojkata: ");
	scanf("%lf %lf %lf", &a, &b, &c);
	double p = (a+b+c)/2;
	obwod = a+b+c;
	double x = (p*(p-a)*(p-b)*(p-c));
	pole = sqrt(x);
	printf("Pole trojkata wynosi %.2f, a obwod %.2f \n",pole, obwod);
}

void kolo(){
	printf("Podaj promien: ");
	scanf("%lf", &r);
	pole = r*r*M_PI;
	obwod = 2*r*M_PI;
	printf("Pole kola wynosi %.2f, a obwod %.2f \n", pole,obwod);
}
