#include <stdio.h>
#include <stdarg.h>
#include <string.h>

void printfAndScanf(char*,...);

int main(void){

    printfAndScanf("testowy napis");
    int a = 2;
    int b = 0;
    printfAndScanf("jakis %dnapis %d",&a,&b);
    printf("%d %d",a,b);




    return 0;
}

void printfAndScanf(char* sentence, ...){

    int lenght = strlen(sentence);
    int numberOfVariables = 0;

    for(int i = 0; i <lenght-1;++i){
        if(sentence[i]=='%' && sentence[i+1]=='d'){
            numberOfVariables++;
        }
    }
    va_list v1;
    va_start(v1,sentence);
    int val;
    //vscanf(format,v1);


    for(int i = 0; i <lenght-1;++i){
        if(sentence[i]=='%' && sentence[i+1]=='d'){
            i++;
            val = va_arg(v1,int);
            scanf("%d",val);
            printf("%d",val);

        }
        else{
            printf("%c",sentence[i]);
        }
    }
    va_end (v1);
    printf("\n");
}
