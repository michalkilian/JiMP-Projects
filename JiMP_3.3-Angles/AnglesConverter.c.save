#include <stdio.h>
#include <math.h>
#ifndef M_PI
    #define M_PI 3.14159265358979323846
#endif

void wybor(void)

int n;
double angle;

int main(void){

    wybor();

    return 0;
}

void wybor(){
	printf("Wybierz jednostke: (1-stopnie, 2-radiany): ");
	scanf("%d", &n);
	printf("Podaj wielkosc kata w wybranej jednostce: ");
	scanf("%lf", &angle);
	if(n == 1)
	{
		ToRadian(angle);
	}
	else if(n == 2)
	{
		ToPitch(angle);
	}
	else{
        printf("Bledna wartosc!\n");
		wybor();
	}
}

ToRadian(double angle){
    double converted_angle = angle /180*M_PI;
    printf("Kat o miarze %.2lf stopni ma miare %.2lf radianow = %.2lf Pi", angle, converted_angle, converted_angle/M_PI);
}

ToPitch(double angle){
    double converted_angle = angle *180/M_PI;
    printf("Kat o miarze %.2lf radianow ma miare %.2lf stopni", angle, converted_angle);
}